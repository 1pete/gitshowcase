- if notice
  %p.notice= notice

- if alert
  %p.alert= alert

%header#header
  %nav.navbar.navbar-dark.navbar-fixed-top
    .container
      %a.navbar-brand{href: '/'}
        = image_tag 'logo-text.png'

      .nav.navbar-nav.pull-right
        - unless user_signed_in?
          = render 'components/sign-in', type: 'link', text: 'Sign In'

        - if user_signed_in?
          %a.nav-item.nav-link{href: users_url}
            %i.fa.fa-cog

          %a.nav-item.nav-link{href: destroy_user_session_path}
            %i.fa.fa-sign-out
